<%- include('partials/header'); %>


<div>
 
<% var count=0;
 posts.forEach(function(post){ 
       
        var date=new Date(parseInt(post.date));
         var formetedDate=date.toDateString();  
         %> 
 	<div class="card block">

   <div class="card-header">
   <h3 class = " blackp"><%= post.title %> </h3>
   </div>


  <div class="card-body">
    <blockquote class="blockquote mb-2">

      <p class ="blackp">

      <%= post.story.substring(0 , 300)+ "..."  %>
       <a href="/storiesbyName?StoryName=<%=post.title%>">Read_more</a>

      </p>

      <p class="card-text"><small class="text-muted"> - <%=formetedDate%></small></p>

    
    </blockquote>


    <!-- Button trigger modal -->
     <a class= "btn btn-primary"  data-toggle="modal" data-target="#exampleModal<%=count%>">
      Delete
     </a> 
    <a class="btn btn-outline-warning" href="/update?id=<%=post._id%>"  role="button">Update!</a>
    
   
  

 </div>
</div> 

 <!-- Modal -->
  <div class="modal fade" id="exampleModal<%=count%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <p class ="blackp" class="modal-title" id="exampleModalLabel"><%= post.title %> </p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
     
      <div class="modal-body">
        <p class ="blackp">Are your sure,you want to delete this quote?</p>> 
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a href="/delete/<%=post._id%>" class="btn btn-primary">Comfirm delete</a>
      </div>
    </div>
  </div>
</div>


 <%
 count++
 })
  %>
 </div>



 





<%- include('partials/footer'); %>